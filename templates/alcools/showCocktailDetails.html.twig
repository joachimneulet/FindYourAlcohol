{% extends 'base.html.twig' %}

{% block title %}Alcools Symfony{%  endblock %}
{% block body %}
    <div class="row p-4 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-4 font-italic">{{ Name }}</h1>
            <p class="lead my-3">Glass Used : {{ Glass }}</p>
            <p class="lead my-3">To make this cocktail, you will need :</p>
            <ul class="lead my-3">
                {% for ingredient in Ingredients %}
                    {% if ingredient is not empty %}
                        <li>{{ ingredient }}</li>
                    {% endif %}
                {% endfor %}
            </ul>

            <h2 class="display-7 font-italic">Instructions</h2>
            <p class="lead my-3">{{ Instructions }}</p>
            <p class="lead mb-0"><a href="#" class="font-weight-bold">Continue reading...</a></p>
        </div>
        <div class="col-md-6 px-0">
            <img class="img-fluid rounded" src="{{ imgDrink }}"/>
        </div>
    </div>



    <br>
    <a href="/">Go Back</a>
{%  endblock %}